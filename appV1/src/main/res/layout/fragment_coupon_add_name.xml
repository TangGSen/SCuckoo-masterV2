<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/common_8dp"
    android:paddingRight="@dimen/common_8dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBg"
        android:paddingBottom="@dimen/common_16dp"
        android:paddingRight="@dimen/common_16dp"
      >
        <TextView
            android:id="@+id/tvPosition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/common_16dp"
            android:paddingLeft="@dimen/common_8dp"
            android:layout_marginTop="@dimen/common_16dp"
            android:paddingTop="@dimen/common_4dp"
            android:paddingBottom="@dimen/common_4dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:background="@drawable/bg_style_theme_v2"
            android:textSize="@dimen/font_12sp"
            android:textColor="@color/whiles"
            app:layout_constraintTop_toTopOf="parent"
            android:gravity="center"
            android:text="1/12"/>



        <TextView
            android:id="@+id/tvInputTip"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/str_input_counpon_name"
            android:layout_marginTop="@dimen/common_16dp"
            android:layout_marginLeft="@dimen/common_16dp"
            app:layout_constraintTop_toBottomOf="@+id/tvPosition"
            android:textColor="@color/colorFrist"
            app:layout_constraintLeft_toLeftOf="parent"
            />


        <EditText
            android:id="@+id/etName"
            android:layout_width="0dp"
            android:layout_height="38dp"
            android:background="@drawable/bg_editext_line"
            android:textColor="@color/colorSecond"
            android:textSize="@dimen/font_14sp"
            app:layout_constraintLeft_toLeftOf="@+id/tvInputTip"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvInputTip" />

        <TextView
            android:id="@+id/tvInputCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0/12"
            android:textColor="@color/colorSecond"
            app:layout_constraintRight_toRightOf="parent"
            android:textSize="@dimen/font_12sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/tvInputTip" />
    </android.support.constraint.ConstraintLayout>


</android.support.constraint.ConstraintLayout>