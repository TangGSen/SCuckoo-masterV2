<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:id="@+id/test_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/test_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="测试登陆" />

        <Button
            android:id="@+id/test_my"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="测试我的资料" />

        <Button
            android:id="@+id/test_showRecommend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="测试showRecommendationPage" />

        <Button
            android:id="@+id/test_addfriends"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="测试添加好友" />

        <Button
            android:id="@+id/test_add_bmob"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="测试bmob" />

        <Button
            android:id="@+id/test_get_comstor_key"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="测试获取自定义的字段" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_testemoji"/>

        <Button
            style="?android:attr/borderlessButtonStyle"
            android:id="@+id/btTestOpen"
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/common_16dp"

            android:layout_marginRight="@dimen/common_16dp"
            android:layout_height="@dimen/frgment_login_edtx_h40dp"
            android:layout_below="@+id/layout_ets"
            android:layout_marginTop="@dimen/frgment_login_24dp"
            android:background="@drawable/etbg_login_register"
            android:text="测试开启"
            android:textColor="@drawable/selector_text_style_v2"
            android:textSize="16sp"/>

        <Button
            style="?android:attr/borderlessButtonStyle"
            android:id="@+id/btTestClose"
            android:layout_width="match_parent"
            android:layout_height="@dimen/frgment_login_edtx_h40dp"
            android:layout_below="@+id/layout_ets"
            android:layout_marginTop="@dimen/frgment_login_24dp"
            android:background="@drawable/etbg_login_register"
            android:layout_marginLeft="@dimen/common_16dp"
            android:layout_marginRight="@dimen/common_16dp"
            android:text="测试关闭"
            android:textColor="@drawable/selector_text_style_v2"
            android:textSize="16sp"/>

        <Button
            android:id="@+id/btnShowRes"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/frgment_login_edtx_h40dp"
            android:layout_below="@+id/layout_ets"
            android:layout_marginLeft="@dimen/common_16dp"
            android:layout_marginRight="@dimen/common_16dp"
            android:layout_marginTop="@dimen/frgment_login_24dp"
            android:background="@drawable/etbg_login_register"
            android:text="测试关闭"
            android:textColor="@drawable/selector_text_style_v2"
            android:textSize="16sp" />


    </LinearLayout>

</android.support.v4.widget.NestedScrollView>