        <TextView
            android:id="@+id/tvContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/common_8dp"
            android:layout_marginTop="8dp"
            android:text="Content"
            android:textColor="@color/colorFrist"
            android:textSize="@dimen/font_14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvContent"
            android:layout_marginRight="8dp"
            android:layout_marginTop="@dimen/common_8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvTime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="1分钟前"
                android:textColor="@color/text_gray"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/likes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/common_8dp"
                android:drawableLeft="@drawable/ic_love_gray"
                android:gravity="center_vertical"
                android:text="10"
                android:textColor="@color/text_gray"
                android:textSize="@dimen/font_12sp" />


            <TextView
                android:id="@+id/comments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/common_8dp"
                android:drawableLeft="@drawable/ic_comments"
                android:drawablePadding="4dp"
                android:gravity="center_vertical"
                android:text="9"
                android:textColor="@color/text_gray"
                android:textSize="@dimen/font_12sp" />
        </LinearLayout>


    </RelativeLayout>
</android.support.v7.widget.CardView>