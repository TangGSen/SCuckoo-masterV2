<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whiles"
    android:orientation="vertical"
    tools:context="com.ourcompany.activity.imui.LoginActivity">

    <include layout="@layout/include_layout_toolbarlyout" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/frgment_login_24dp"
        android:layout_marginRight="@dimen/frgment_login_24dp"
        android:layout_marginTop="@dimen/frgment_login_layout_margin">

        <LinearLayout
            android:id="@+id/layout_ets"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:divider="@drawable/line_divider_h"
            android:showDividers="middle|end">

            <EditText
                android:id="@+id/et_user_name"
                android:layout_width="match_parent"
                android:layout_height="@dimen/frgment_login_edtx_h40dp"
                android:layout_marginBottom="@dimen/common_8dp"
                android:background="@null"
                android:drawableLeft="@drawable/ic_username"
                android:drawablePadding="@dimen/common_4dp"
                android:inputType="number"
                android:hint="@string/frag_login_username_hint"
                android:lineSpacingExtra="2dp"
                android:lines="1"
                android:paddingLeft="16dp"
                android:textColor="@color/colorFrist"
                android:textColorHint="@color/text_gray"
                android:textSize="16sp" />


            <EditText
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_height="@dimen/frgment_login_edtx_h40dp"
                android:layout_below="@+id/et_user_name"
                android:layout_marginTop="@dimen/common_8dp"
                android:layout_marginBottom="@dimen/common_8dp"
                android:background="@null"
                android:drawableLeft="@drawable/ic_password"
                android:drawablePadding="@dimen/common_4dp"
                android:hint="@string/frag_login_password_hint"
                android:inputType="textPassword"
                android:lines="1"
                android:paddingLeft="16dp"
                android:textColor="@color/colorFrist"
                android:textColorHint="@color/text_gray"
                android:textSize="16sp" />

        </LinearLayout>

        <Button
            style="?android:attr/borderlessButtonStyle"
            android:id="@+id/bt_login"
            android:layout_width="match_parent"
            android:layout_height="@dimen/frgment_login_edtx_h40dp"
            android:layout_below="@+id/layout_ets"
            android:layout_marginTop="@dimen/frgment_login_24dp"
            android:background="@drawable/etbg_login_register"
            android:enabled="false"
            android:text="@string/loginString"
            android:textColor="@drawable/selector_text_style_v2"
            android:textSize="16sp"/>


        <Button
            android:id="@+id/find_password"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/frgment_login_edtx_h40dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/bt_login"
            android:layout_marginTop="@dimen/common_8dp"
            android:background="@null"
            android:gravity="left|center_vertical"
            android:text="@string/findPassword"
            android:textColor="@drawable/selector_text_style_v3"
            android:textSize="14sp" />

        <Button
            android:id="@+id/singUp"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/frgment_login_edtx_h40dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/bt_login"
            android:layout_marginTop="@dimen/common_8dp"
            android:background="@null"
            android:gravity="right|center_vertical"
            android:text="@string/singUp"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp" />
    </RelativeLayout>
</LinearLayout>
