<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whiles"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/common_toolbar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:padding="0dp"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        app:contentInsetStartWithNavigation="0dp"
        app:navigationIcon="@drawable/ic_back_v3"
        app:titleTextAppearance="@style/Toolbar.TitleText"
        app:titleTextColor="@color/colorFrist" />

    <View
        android:id="@+id/viewLine"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorBg"
        />


    <LinearLayout
        android:id="@+id/layout_ets"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tipNewPhone"
        android:layout_marginLeft="@dimen/frgment_login_24dp"
        android:layout_marginRight="@dimen/frgment_login_24dp"
        android:layout_marginTop="@dimen/frgment_login_24dp"
        android:divider="@drawable/line_divider_h"
        android:orientation="vertical"
        android:showDividers="middle|end">

        <EditText
            android:id="@+id/etCurrentPassword"
            android:layout_width="match_parent"
            android:layout_height="@dimen/frgment_login_edtx_h40dp"
            android:layout_below="@+id/et_verify_code"
            android:layout_marginBottom="@dimen/common_8dp"
            android:layout_marginTop="@dimen/common_8dp"
            android:background="@null"
            android:drawableLeft="@drawable/ic_password"
            android:drawablePadding="@dimen/common_4dp"
            android:hint="@string/hint_et_current_password"
            android:inputType="textPassword"
            android:lines="1"
            android:paddingLeft="16dp"
            android:textColor="@color/colorFrist"
            android:textColorHint="@color/text_gray"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/etNewPassword"
            android:layout_width="match_parent"
            android:layout_height="@dimen/frgment_login_edtx_h40dp"
            android:layout_below="@+id/et_verify_code"
            android:layout_marginBottom="@dimen/common_8dp"
            android:layout_marginTop="@dimen/common_8dp"
            android:background="@null"
            android:drawableLeft="@drawable/ic_password"
            android:drawablePadding="@dimen/common_4dp"
            android:hint="@string/hint_et_new_password"
            android:inputType="textPassword"
            android:lines="1"
            android:paddingLeft="16dp"
            android:textColor="@color/colorFrist"
            android:textColorHint="@color/text_gray"
            android:textSize="16sp" />


    </LinearLayout>

    <Button
        android:id="@+id/btFinish"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/frgment_login_edtx_h40dp"
        android:layout_below="@+id/layout_ets"
        android:layout_marginLeft="@dimen/frgment_login_24dp"
        android:layout_marginRight="@dimen/frgment_login_24dp"
        android:layout_marginTop="@dimen/frgment_login_24dp"
        android:enabled="false"
        android:background="@drawable/etbg_login_register"
        android:text="@string/str_finish"
        android:textColor="@drawable/selector_text_style_v2"
        android:textSize="16sp" />


</LinearLayout>
