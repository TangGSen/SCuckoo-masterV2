<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whiles"
    android:orientation="vertical"
    tools:context="com.ourcompany.activity.imui.LoginActivity">


    <LinearLayout
        android:id="@+id/layout_ets"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/frgment_login_24dp"
        android:layout_marginRight="@dimen/frgment_login_24dp"
        android:layout_marginTop="@dimen/frgment_login_layout_margin"
        android:divider="@drawable/line_divider_h"
        android:orientation="vertical"
        android:showDividers="middle|end">

        <EditText
            android:id="@+id/et_user_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/frgment_login_edtx_h40dp"
            android:layout_marginBottom="@dimen/common_8dp"
            android:background="@null"
            android:drawableLeft="@drawable/ic_username"
            android:drawablePadding="@dimen/common_4dp"
            android:inputType="number"
            android:hint="@string/frag_login_username_hint"
            android:lineSpacingExtra="2dp"
            android:lines="1"
            android:paddingLeft="16dp"
            android:textColor="@color/colorFrist"
            android:textColorHint="@color/text_gray"
            android:textSize="16sp" />

        <LinearLayout
            android:id="@+id/layout_safety_code"
            android:layout_width="match_parent"
            android:layout_height="@dimen/frgment_login_edtx_h40dp"
            android:layout_marginBottom="@dimen/common_8dp"
            android:layout_marginTop="@dimen/common_8dp"
            android:orientation="horizontal"
            >

            <EditText
                android:id="@+id/et_verify_code"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_below="@+id/et_user_name"
                android:layout_marginBottom="@dimen/common_8dp"
                android:layout_marginRight="@dimen/common_8dp"
                android:layout_marginTop="@dimen/common_8dp"
                android:layout_weight="1"
                android:background="@null"
                android:drawableLeft="@drawable/ic_safety"
                android:drawablePadding="@dimen/common_4dp"
                android:hint="@string/frag_login_safety_hint"
                android:lines="1"
                android:paddingLeft="16dp"
                android:textColor="@color/colorFrist"
                android:textColorHint="@color/text_gray"
                android:textSize="16sp" />

            <Button
                android:id="@+id/bt_safety_code"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_below="@+id/layout_ets"
                android:layout_marginLeft="@dimen/common_8dp"
                android:background="@null"
                android:textAllCaps="false"
                android:enabled="true"
                android:gravity="center_vertical|right"
                android:text="@string/get_safety_code"
                android:textColor="@drawable/selector_text_style_v1"
                android:textSize="16sp" />

        </LinearLayout>


        <EditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="@dimen/frgment_login_edtx_h40dp"
            android:layout_below="@+id/et_verify_code"
            android:layout_marginBottom="@dimen/common_8dp"
            android:layout_marginTop="@dimen/common_8dp"
            android:background="@null"
            android:drawableLeft="@drawable/ic_password"
            android:drawablePadding="@dimen/common_4dp"
            android:hint="@string/frag_login_password_hint"
            android:inputType="textPassword"
            android:lines="1"
            android:paddingLeft="16dp"
            android:textColor="@color/colorFrist"
            android:textColorHint="@color/text_gray"
            android:textSize="16sp" />

    </LinearLayout>

    <Button
        android:id="@+id/bt_resigister"
        android:layout_width="match_parent"
        android:layout_height="@dimen/frgment_login_edtx_h40dp"
        android:layout_marginLeft="@dimen/frgment_login_24dp"
        android:layout_marginRight="@dimen/frgment_login_24dp"
        android:layout_marginTop="@dimen/frgment_login_24dp"
        android:background="@drawable/etbg_login_register"
        style="?android:attr/borderlessButtonStyle"
        android:enabled="false"
        android:text="@string/register_new_user"
        android:textColor="@drawable/selector_text_style_v2"
        android:textSize="16sp" />




</LinearLayout>
