<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutInpts"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="bottom"
    android:orientation="vertical"
    android:visibility="gone">

    <View
        android:id="@+id/inputOutSildeView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@android:color/transparent" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:paddingLeft="@dimen/common_16dp"
        android:paddingRight="@dimen/common_16dp">

        <EditText
            android:id="@+id/etInput"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="@dimen/common_16dp"
            android:background="@drawable/bg_write_commentv2"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="top"
            android:imeOptions="actionSend"
            android:inputType="text"
            android:maxLines="3"
            android:padding="@dimen/common_8dp"
            android:textColor="@color/colorFrist"
            android:textSize="@dimen/font_14sp" />

        <TextView
            android:id="@+id/btn_a_t"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/etInput"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/common_8dp"
            android:paddingRight="@dimen/common_8dp"
            android:text="@string/str_a_t"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/imageKeyBorad"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_below="@+id/etInput"
            android:layout_marginRight="@dimen/common_8dp"
            android:layout_toLeftOf="@+id/btnSend"
            android:padding="12dp"
            android:src="@drawable/ic_emoji" />

        <TextView
            android:id="@+id/btnSend"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/etInput"
            android:background="@null"
            android:gravity="center_vertical|right"
            android:paddingLeft="16dp"
            android:text="@string/string_send"
            android:textSize="16sp" />
    </RelativeLayout>

    <View
        android:id="@+id/v_panel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_keyboard_height"
        android:background="#0ff"
        android:visibility="gone" />

</LinearLayout>
